{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "@tasktrove/atoms": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*", "*.ts", "*.js"],
  "exclude": [
    "dist",
    "node_modules",
    "eslint.config.js",
    "**/*.pro.ts",
    "**/*.pro.tsx",
    "**/*.pro.test.ts",
    "**/*.pro.test.tsx"
  ]
}
