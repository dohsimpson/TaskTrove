{
  "name": "@tasktrove/constants",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": {
      "pro": "./src/defaults.pro.ts",
      "default": "./src/defaults.ts"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "typecheck:base": "tsgo --noEmit",
    "typecheck:pro": "tsgo --project tsconfig.pro.json --noEmit",
