{
  "name": "@tasktrove/i18n",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts",
    "./hooks": "./src/hooks/index.ts"
  },
  "scripts": {
    "lint": "eslint .",
    "typecheck:base": "tsgo --noEmit",
    "typecheck:pro": "tsgo --project tsconfig.pro.json --noEmit",
    "typecheck": "pnpm typecheck:base && (test -f tsconfig.pro.json && pnpm typecheck:pro || true)",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "check:pro": "pnpm typecheck:pro && pnpm lint",
    "test": "node ../../scripts/run-vitest.mjs run",
    "test:watch": "node ../../scripts/run-vitest.mjs --watch"
  },
  "dependencies": {
    "i18next": "catalog:",
    "react-i18next": "catalog:",
    "i18next-browser-languagedetector": "catalog:",
    "i18next-resources-to-backend": "catalog:",
    "react": "catalog:"
  },
  "devDependencies": {
    "@testing-library/react": "catalog:",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@typescript/native-preview": "catalog:",
    "@types/react": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
